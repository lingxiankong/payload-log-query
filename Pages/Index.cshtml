@page
@model IndexModel
@{
    ViewData["Title"] = "Payload Log Viewer";
}

<div class="container mt-3">
    <h1 class="h3">Payload Log Viewer</h1>
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <label class="form-label">Service</label>
            <select id="serviceSelect" class="form-select"></select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Session</label>
            <select id="sessionSelect" class="form-select"></select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Keyword</label>
            <input id="keywordInput" class="form-control" placeholder="Search keyword" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Status Code</label>
            <input id="statusInput" class="form-control" type="number" min="100" max="599" placeholder="e.g. 200" />
        </div>
        <div class="col-md-3">
            <label class="form-label">From</label>
            <input id="fromInput" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-3">
            <label class="form-label">To</label>
            <input id="toInput" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Batch Size</label>
            <input id="limitInput" class="form-control" type="number" value="100" min="1" max="500" />
        </div>

        <div class="col-md-2 d-flex align-items-end gap-2">
            <button id="queryBtn" type="button" class="btn btn-primary w-100">Query</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th style="width: 220px;">Timestamp</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody id="logTableBody"></tbody>
        </table>
    </div>

    <div id="pager" class="d-flex justify-content-between align-items-center mt-2">
        <div class="d-grid gap-2">
            <button id="loadMoreBtn" type="button" class="btn btn-primary" style="display:none;">Load More</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/logs.js"></script>
}
